<Window x:Class="electric_network_editor.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:electric_network_editor"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1500">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--ElementSideBar-->
        <StackPanel Width="50px"
                    Orientation="Vertical"
                    Background="LightGray"
                    x:Name="Sidebar"
                    >
            <StackPanel.Resources>
                <Style TargetType="RadioButton" BasedOn="{StaticResource {x:Type ToggleButton}}">
                    <Setter Property="Margin" Value="5,10,5,0"/>
                    <Setter Property="Height" Value="40px"/>
                    <Setter Property="Width" Value="40px"/>
                </Style>
            </StackPanel.Resources>



          

            <!--<RadioButton  
                    Name="NetworkConnectBtn" 
                    BorderBrush="Black" 
                    BorderThickness="1"
                    Unchecked="ConnectionBtn_Unchecked"         
                    >
                <Image Source="Images/connect.png"></Image>
            </RadioButton>-->



        </StackPanel>

        <!-- Canvas for placing symbols -->
        <Canvas x:Name="NetworkCanvas" Grid.Column="1" Background="White" MouseDown="Canvas_MouseDown"/>

    </Grid>
</Window>